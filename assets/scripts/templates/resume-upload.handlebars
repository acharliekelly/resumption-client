<div class="resume-form">
  <header>Resume Form</header>
  <form id="resumeForm" action="#">
  <div class="form-group row">
    <label class="col-4 col-form-label" for="resumeName">Name: </label>
    <div class="col-8">
      <input id="resumeName" class="form-control" name="resume[name]" type="text" >
    </div>
  </div>
  <div class="form-group row">
    <label class="col-4 col-form-label" for="resumeFormat">Format: </label>
    <div class="col">
      <select class="form-control" id="resumeFormat" name="resume[format]">
        <option value="text">Text</option>
        <option value="md">Markdown</option>
        <option value="html">HTML</option>
      </select>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-2 col-form-label" for="resumeContent">Body: </label>
    <div class="col-10 custom-file">
        <input type="file" class="custom-file-input" id="customFile">
        <label class="custom-file-label" for="customFile">Choose file</label>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-10">
    </div>
    <div class="col-2">
      <button id="btnSubmit" type="submit" class="btn btn-outline-primary">Submit</button>
    </div>
  </div>
</form>
</div>
